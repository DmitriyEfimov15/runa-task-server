generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String          @id @default(uuid())
  email           String          @unique
  password        String
  roles           UserRole[]
  isEmailVerified Boolean         @default(false) @map("is_email_verified")
  activationLink  String?         @unique @map("activation_link")
  activationCode  Int?            @map("activation_code")
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  refreshTokens   RefreshToken[]
  resetTokens     ResetPassword[] // ðŸ‘ˆ one-to-many

  @@map("users")
}


model Role {
  id        String     @id @default(uuid())
  name      String     @unique
  users     UserRole[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@map("roles")
}

model UserRole {
  userId String
  roleId String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role Role @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@id([userId, roleId])
  @@map("user_roles")
}

model RefreshToken {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  token     String
  deviceInfo String  @map("device_info")
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("refresh_tokens")
  @@unique([userId, deviceInfo])
}

model ResetPassword {
  id         String   @id @default(uuid())
  resetToken String   @unique
  userId     String
  expiresAt  DateTime

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt  DateTime @default(now())

  @@index([userId])
  @@map("reset_password")
}